{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
        "/@/*": [
          // / to begin with.
          "src/*"
        ]
      },
      "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
      "types": ["vite/client", "node"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }